{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "scale",
	"patterns": [
		{"include": "#comment"},
		{"include": "#inline_c"},
		{"include": "#inline_c_old"},
		{"include": "#keyw_operator"},
		{"include": "#keyword"},
		{"include": "#deprecation"},
		{"include": "#keyw_constant"},
		{"include": "#function_declaration"},
		{"include": "#quoted_string"},
		{"include": "#quoted_char"},
		{"include": "#constant_number"},
		{"include": "#stack_operators"},
		{"include": "#default"},
		{"include": "#illegal"}
	],
	"repository": {
		"comment": {
			"name": "comment",
			"begin": "#",
			"end": "\n",
			"patterns": [{
				"name": "comment",
				"match": "."
			}]
		},
		"keyw_constant": {
			"name": "entity.name.function",
			"patterns": [{
				"name": "entity.name.function",
				"match": "\\b(true|false|nil)\\b"
			}]
		},
		"keyword": {
			"patterns": [{
				"name": "keyword.control",
				"match": "\\b(function|import|end|while|do|done|construct|final|unless|if|elif|elunless|then|else|fi|switch|case|esac|default|return|break|continue|for|foreach|in|to|step|decl|ref|nil|true|false|typeof|nameof|sizeof|typealias|as|container|repeat|struct|enum|interface|new|is|cdecl|asm|goto|label|none|int|float|int32|int16|int8|uint32|uint16|uint8|uint|int64|uint64|any|str|self|super|bool|sealed|static|private|export|expect|const|readonly|mut|try|catch|lambda)\\b"
			},{
				"name": "keyword.control",
				"match": "((macro|pragma)!)"
			}]
		},
		"deprecation": {
			"begin": "\\b(deprecated!\\[)",
			"end": "\\]",
			"beginCaptures": {
			  "0": { "name": "keyword.control" }
			},
			"endCaptures": {
			  "0": { "name": "keyword.control" }
			},
			"patterns": [{
				"name": "keyword.control",
				"match": "\\b(since|replacement|forRemoval)\\b"
			},{
				"include": "source.scale"
			}]
		},
		"illegal": {
			"patterns": [{
				"name": "invalid",
				"match": "\\\\."
			}]
		},
		"stack_operators": {
			"patterns": [{
				"name": "keyword.control.less",
				"match": "\\b(drop|dup|swap|over|sdup2|swap2|clearstack)\\b"
			}]
		},
		"function_declaration": {
			"patterns": [{
				"name": "variable.name",
				"match": "[A-Za-z_]+([A-Za-z_0-9]+)?"
			}]
		},
		"quoted_string": {
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "\"",
			"patterns": [{
				"name": "string",
				"match": "\\\\."
			}]
		},
		"quoted_char": {
			"name": "constant.character",
			"begin": "'",
			"end": "'",
			"patterns": [{
				"name": "char",
				"match": "\\\\?."
			}]
		},
		"constant_number": {
			"name": "constant.numeric",
			"match": "\\b(0x[0-9a-fA-F]+|0b[0-1]+|0o[0-7]+|[0-9]+(\\.[0-9]+)?)\\b"
		},
		"default": {
			"name": "variable.name",
			"match": "[A-Za-z_]+([A-Za-z_0-9]+)?"
		},
		"inline_c": {
			"begin": "\\b(c!)",
			"end": "\\b(end)\\b",
			"beginCaptures": {
			  "0": { "name": "keyword.control" }
			},
			"endCaptures": {
			  "0": { "name": "keyword.control" }
			},
			"name": "meta.embedded.block.c",
			"patterns": [{"include": "source.c"}]
		},
		"keyw_operator": {
			"name": "keyword.control",
			"match": "(:|\\.|,|(\\+|-|\\*|/|%|\\||\\^|~)>?|@|&|=(=|>)|!=?|<(<|=)?|>(>|=)?|\\[|\\]|\\{|\\}|\\(|\\)|\\?)"
		}
	},
	"scopeName": "source.scale"
}