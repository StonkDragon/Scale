{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "scale",
	"patterns": [
		{"include": "#comment"},
		{"include": "#block_comment_c"},
		{"include": "#block_comment_scale"},
		{"include": "#block_comment_scldoc"},
		{"include": "#block_comment"},
		{"include": "#inline_c"},
		{"include": "#inline_c_old"},
		{"include": "#quoted_string"},
		{"include": "#keyw_operator"},
		{"include": "#keyword"},
		{"include": "#stack_operators"},
		{"include": "#deprecation"},
		{"include": "#quoted_char"},
		{"include": "#do_types"},
		{"include": "#keyw_constant"},
		{"include": "#function_declaration"},
		{"include": "#constant_number"},
		{"include": "#default"},
		{"include": "#illegal"}
	],
	"repository": {
		"comment": {
			"name": "comment",
			"begin": "#",
			"end": "\n",
			"patterns": [{
				"name": "comment",
				"match": "."
			}]
		},
		"block_comment": {
			"name": "comment",
			"begin": "`",
			"end": "`",
			"patterns": [{
				"name": "comment",
				"match": "."
			}]
		},
		"block_comment_c": {
			"begin": "`c",
			"end": "`",
			"beginCaptures": {
			  "0": { "name": "comment" }
			},
			"endCaptures": {
			  "0": { "name": "comment" }
			},
			"name": "meta.embedded.block.c",
			"patterns": [{"include": "source.c"}]
		},
		"block_comment_scale": {
			"begin": "`scale",
			"end": "`",
			"beginCaptures": {
			  "0": { "name": "comment" }
			},
			"endCaptures": {
			  "0": { "name": "comment" }
			},
			"name": "meta.embedded.block.scale",
			"patterns": [{"include": "source.scale"}]
		},
		"block_comment_scldoc": {
			"begin": "`scldoc",
			"end": "`",
			"beginCaptures": {
			  "0": { "name": "comment" }
			},
			"endCaptures": {
			  "0": { "name": "comment" }
			},
			"name": "meta.embedded.block.scldoc",
			"patterns": [{"include": "source.scldoc"}]
		},
		"keyw_constant": {
			"name": "entity.name.function",
			"patterns": [{
				"name": "entity.name.function",
				"match": "\\b(true|false|nil)\\b"
			}]
		},
		"do_types": {
			"patterns": [{
				"name": "entity.name.function",
				"match": "'\\b(f|m|r|filter|map(Indexed)?|reduce|count|also|each|transform)\\b"
			}]
		},
		"keyword": {
			"patterns": [{
				"name": "keyword.control",
				"match": "\\b(function|import|template|end|while|until|do|done|init|deinit|construct|final|unless|if|elif|elunless|then|else|fi|assert|switch|case|esac|default|return|using|break|continue|for|foreach|in|to|step|decl|ref|nil|true|false|typeof|typeid|nameof|sizeof|typealias|as|repeat|struct|union|layout|enum|interface|new|is|cdecl|overrides|nothing|none|int|float|float32|int32|int16|int8|uint32|uint16|uint8|uint|int64|uint64|any|str|varargs|self|bool|sealed|static|private|expect|reified|foreign|nonvirtual|local|operator|inline|unsafe|const|readonly|try|catch|throw|open|lambda|await|async)\\b"
			},{
				"name": "keyword.control",
				"match": "((macro|pragma)!)"
			}]
		},
		"deprecation": {
			"begin": "\\b(deprecated!\\[)",
			"end": "\\]",
			"beginCaptures": {
			  "0": { "name": "keyword.control" }
			},
			"endCaptures": {
			  "0": { "name": "keyword.control" }
			},
			"patterns": [{
				"name": "keyword.control",
				"match": "\\b(since|replacement|forRemoval)\\b"
			},{
				"include": "source.scale"
			}]
		},
		"illegal": {
			"patterns": [{
				"name": "invalid",
				"match": "\\\\."
			}]
		},
		"stack_operators": {
			"patterns": [{
				"name": "keyword.operator",
				"match": "\\b(swap|dup|drop|over|sdup2|swap2|rot|unrot)\\b"
			}]
		},
		"function_declaration": {
			"patterns": [{
				"name": "variable.name",
				"match": "[A-Za-z_]+([A-Za-z_0-9]+)?"
			}]
		},
		"quoted_string": {
			"name": "string.quoted.double",
			"begin": "(c\"|u\"|\")",
			"end": "\"",
			"patterns": [{
				"name": "string",
				"match": "\\\\."
			}]
		},
		"quoted_char": {
			"name": "constant.character",
			"patterns": [{
				"name": "char",
				"match": "'\\\\?.'"
			}]
		},
		"constant_number": {
			"name": "constant.numeric",
			"match": "\\b(0x[0-9a-fA-F]+((i|u|I|U)(8|16|32|64)?)?|0b[0-1]+((i|u|I|U)(8|16|32|64)?)?|0o[0-7]+((i|u|I|U)(8|16|32|64)?)?|[0-9]+(((\\.[0-9]+(f|F|d|D)?)?)|(((i|u|I|U)(8|16|32|64)?)|(f|F|d|D)))?)\\b"
		},
		"default": {
			"name": "variable.name",
			"match": "[A-Za-z_]+([A-Za-z_0-9]+)?"
		},
		"inline_c": {
			"begin": "\\b(c!)",
			"end": "\\b(end)\\b",
			"beginCaptures": {
			  "0": { "name": "keyword.control" }
			},
			"endCaptures": {
			  "0": { "name": "keyword.control" }
			},
			"name": "meta.embedded.block.c",
			"patterns": [{"include": "source.c"}]
		},
		"keyw_operator": {
			"name": "keyword.control",
			"match": "(:|\\.|,|(\\+|-|\\*|/|%|\\||\\^|~)>?|@|&|\\$|=(=|>)|!=?|<(<|=)?|>(>|=)?|\\[|\\]|\\{|\\}|\\(|\\)|\\?)"
		}
	},
	"scopeName": "source.scale"
}