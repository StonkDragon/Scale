{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "scale",
	"patterns": [
		{"include": "#comment"},
		{"include": "#keyw_operator"},
		{"include": "#keyword"},
		{"include": "#keyw_constant"},
		{"include": "#function_declaration"},
		{"include": "#quoted_string"},
		{"include": "#quoted_char"},
		{"include": "#constant_number"},
		{"include": "#stack_operators"},
		{"include": "#default"}
	],
	"repository": {
		"comment": {
			"name": "comment",
			"begin": "#",
			"end": "\n",
			"patterns": [{
				"name": "comment",
				"match": "."
			}]
		},
		"keyw_constant": {
			"name": "entity.name.function",
			"patterns": [{
				"name": "entity.name.function",
				"match": "\\b(true|false|nil)\\b"
			}]
		},
		"keyword": {
			"patterns": [{
				"name": "keyword.control",
				"match": "\\b(function|using|from|end|extern|while|else|do|done|if|fi|switch|case|esac|default|return|break|continue|for|foreach|in|to|step|store|decl|addr|nil|true|false|container|repeat|struct|interface|new|is|cdecl|goto|label|none|int|float|any|str|self|bool|sealed|nowarn|nomangle|static|(reference|value)type)\\b"
			}]
		},
		"stack_operators": {
			"patterns": [{
				"name": "keyword.control.less",
				"match": "\\b(drop|dup|swap|over|sdup2|swap2|clearstack)\\b"
			}]
		},
		"function_declaration": {
			"patterns": [{
				"name": "variable.name",
				"match": "[A-Za-z_]+([A-Za-z_0-9]+)?"
			}]
		},
		"quoted_string": {
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "\"",
			"patterns": [{
				"name": "string",
				"match": "\\\\."
			}]
		},
		"quoted_char": {
			"name": "constant.character",
			"begin": "'",
			"end": "'",
			"patterns": [{
				"name": "char",
				"match": "\\\\?."
			}]
		},
		"constant_number": {
			"name": "constant.numeric",
			"match": "\\b(0x[0-9a-fA-F]+|0b[0-1]+|0o[0-7]+|[0-9]+(\\.[0-9]+)?)\\b"
		},
		"default": {
			"name": "variable.name",
			"match": "[A-Za-z_]+([A-Za-z_0-9]+)?"
		},
		"keyw_operator": {
			"name": "keyword.control",
			"match": "(:|\\.|,|(\\.?(\\+|-|\\*|/))|%|@|&|\\||\\^|=(=|>)|!=?|<(<|=)?|>(>|=)?|~|\\[|\\]|\\{|\\}|\\(|\\)|\\?)"
		}
	},
	"scopeName": "source.scale"
}