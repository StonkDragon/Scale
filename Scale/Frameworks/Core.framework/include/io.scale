#ifndef _CORE_FRAMEWORK__IO_SCALE_
#define _CORE_FRAMEWORK__IO_SCALE_

extern function write(_fd_, _str_, _n_)
extern function read(_fd_, _s_, _n_)

function puts(_str_)
    1 _str_ _str_ strlen write
    1 "\n" 1 write
end

function eputs(_str_)
    2 _str_ _str_ strlen write
    2 "\n" 1 write
end

function putint(_int_)
    _int_ longToString puts
end

function putfloat(_f_)
    _f_ doubleToString puts
end

function throwerr(_err_)
    _err_ eputs 1 exit
end

#endif
