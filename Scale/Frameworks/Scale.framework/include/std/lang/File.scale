typealias __c_file "FILE*"

final struct File
  private decl _name: str
  private decl _file: __c_file

  function init(name: str): none
    unsafe
      name:view "ab+":view File::__c_fopen => self._file
    end
    name => self._name
  end

  function name(): str
    self._name return
  end

  restrict function close(): none
    unsafe
      _file File::__c_fclose
    end
  end

  restrict function append(s: str): none
    unsafe
      s:view 1 s:size _file File::__c_fwrite
    end
  end

  restrict function puts(s: any): none
    s builtinToString => decl val: str
    val self:append
    "\n" self:append
  end

  restrict function writeBinary(buf: any, sz: int): none
    unsafe
      buf 1 sz _file File::__c_fwrite
    end
  end

  restrict function read(sz: int): any
    sz any::new => decl buffer: [any]?
    unsafe
      buffer 1 sz _file File::__c_fread
    end
    buffer
    return
  end

  restrict function offsetFromBegin(offset: int): none
    unsafe
      _file offset 0 File::__c_fseek
    end
  end

  restrict function offsetFromEnd(offset: int): none
    unsafe
      _file offset 2 File::__c_fseek
    end
  end

  restrict function offset(offset: int): none
    unsafe
      _file offset 1 File::__c_fseek
    end
  end

  restrict function fileno(): int
    unsafe
      _file File::__c_fileno
      return
    end
  end

  restrict function pos(): int
    unsafe
      _file File::__c_ftell
      return
    end
  end

  restrict function delete(): bool
    unsafe
      self._name:view __c_remove 0 ==
      return
    end
  end

  restrict function create(): none
    "" self:append
  end

  static function exists(f: str): bool
    unsafe
      f:view "r":view File::__c_fopen nil != return
    end
  end

  private static expect cdecl "fopen"  function __c_fopen(fileName: [int8], mode: [int8]): __c_file?
  private static expect cdecl "fwrite" function __c_fwrite(buffer: any, elemSize: int, numElems: int, filePtr: __c_file): none
  private static expect cdecl "fread"  function __c_fread(buffer: any, numElems: int, elemSize: int, filePtr: __c_file): none
  private static expect cdecl "fclose" function __c_fclose(filePtr: __c_file): none
  private static expect cdecl "ftell"  function __c_ftell(filePtr: __c_file): int
  private static expect cdecl "fileno" function __c_fileno(filePtr: __c_file): int
  private static expect cdecl "remove" function __c_remove(fileName: [int8]): int
  private static expect cdecl "fseek"  function __c_fseek(filePtr: __c_file, offset: int, _whence_: int): none
end

