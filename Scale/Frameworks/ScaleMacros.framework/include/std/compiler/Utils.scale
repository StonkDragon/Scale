import std.Result

enum TokenType
    EOF
    Return
    Function
    End
    True
    False
    Nil
    If
    Unless
    Then
    Elif
    Elunless
    Else
    Fi
    While
    Until
    Do
    Done
    ExternC
    Break
    Continue
    For
    Foreach
    In
    Step
    To
    AddrRef
    Store
    Declare
    ContainerDef
    Repeat
    StructDef
    UnionDef
    New
    Is
    CDecl
    Label
    Goto
    Switch
    Case
    Esac
    Default
    InterfaceDef
    As
    Enum
    Using
    Lambda
    Pragma
    Await
    Typeof
    Typeid
    Nameof
    Sizeof
    Try
    Catch
    Unsafe
    Assert
    Varargs

    QuestionMark
    AddrOf
    ParenOpen
    ParenClose
    CurlyOpen
    CurlyClose
    BracketOpen
    BracketClose
    Comma
    Column
    DoubleColumn
    Dot
    
    Ticked
    Identifier
    Number
    NumberFloat
    StringLiteral
    CharStringLiteral
    UtfStringLiteral
    CharLiteral
    Dollar
    StackOp
    MAX
end

layout SourceLocation
    decl file: str
    decl line: int
    decl column: int
end

layout Token
    decl type: TokenType
    decl value: str
    decl location: SourceLocation
end

layout MacroError
    decl msg: str
    decl location: SourceLocation
end

layout Parser
    decl config: Config

    expect foreign function peek(): Token?
    expect foreign function consume(): Token?
end

layout Config
    expect foreign function hasKey(key: str): bool
    expect foreign function getKey(key: str): str?
end
