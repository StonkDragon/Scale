build: {
  compiler: "g++";
  sourceDir: "Compiler";
  outputDir: "target";
  target: "sclc";
  includes: [
    "Compiler";
  ];
  units: [
    "Main.cpp";
    "modules/SyntaxTree.cpp";
    "modules/Parser.cpp";
    "modules/TokenHandlers.cpp";
    "modules/Tokenizer.cpp";
    "modules/Transpiler.cpp";
    "modules/DragonConfig.cpp";
    "modules/Function.cpp";
    "modules/InfoDumper.cpp";
    "Common.cpp";
  ];
  outFilePrefix: "-o";
  libraryPathPrefix: "-L";
  libraryPrefix: "-l";
  macroPrefix: "-D";
  includePrefix: "-I";
  libraryPaths: [];
  libs: [];
  defines: [
    "VERSION=\"23.0\"";
    "C_VERSION=\"gnu17\"";
  ];
  std: "gnu++17";
  flags: [
    "-Wall";
    "-Wextra";
    "-Werror";
    "-pedantic";
  ];
  preBuild: [
    "git ls-files | egrep '(\.scale|\.c(pp)?|\.h(pp)?)$' | xargs wc -l > loc.txt";
    "rm -rf $HOME/Scale";
    "cp -r Scale $HOME";
  ];
  postBuild: [
    "sudo mv target/sclc /usr/local/bin/sclc";
    "rm -rf target";
    "python3 tests.py run";
  ];
};

